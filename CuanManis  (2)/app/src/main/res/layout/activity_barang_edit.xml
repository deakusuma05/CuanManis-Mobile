<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        tools:context=".BarangEditActivity">

        <!-- Title -->
        <TextView
            android:text="Edit Barang"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp" />

        <!-- Nama Barang -->
        <EditText
            android:id="@+id/et_nama_barang"
            android:hint="Nama Barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:backgroundTint="#CCCCCC"
            android:layout_marginBottom="12dp" />

        <!-- Kategori -->
        <Spinner
            android:id="@+id/spinner_kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Lokasi -->
        <EditText
            android:id="@+id/et_lokasi"
            android:hint="Lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:backgroundTint="#CCCCCC"
            android:layout_marginBottom="12dp" />

        <!-- Harga -->
        <EditText
            android:id="@+id/et_harga"
            android:hint="Harga"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:backgroundTint="#CCCCCC"
            android:layout_marginBottom="12dp" />

        <!-- Kondisi -->
        <Spinner
            android:id="@+id/spinner_kondisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Deskripsi -->
        <EditText
            android:id="@+id/et_deskripsi"
            android:hint="Deskripsi Barang"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="12dp"
            android:backgroundTint="#CCCCCC"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp" />

        <!-- Link Gambar -->
        <TextView
            android:text="Link Gambar (satu per baris, max 15)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#444"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_links"
            android:hint="https://â€¦"
            android:inputType="textUri|textMultiLine"
            android:gravity="top|start"
            android:backgroundTint="#CCC"
            android:padding="12dp"
            android:maxLines="8"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp" />

        <!-- Preview Gambar -->
        <TextView
            android:text="Preview Gambar"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#444"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/previewContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Button Simpan -->
        <Button
            android:id="@+id/btn_update"
            android:text="SIMPAN PERUBAHAN"
            android:backgroundTint="#940505"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>