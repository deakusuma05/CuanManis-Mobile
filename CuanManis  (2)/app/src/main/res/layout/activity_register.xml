<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/logoCuanManis"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:contentDescription="@drawable/logo_cuanmanis"
            android:src="@drawable/logo_cuanmanis" />

        <!-- WELCOME BOX -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Selamat Datang -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Daftar Akun Baru"
                android:textColor="#8B4513"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/emailRegisterInput"
            style="@style/CuanInputStyle"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/usernameInput"
            style="@style/CuanInputStyle"
            android:hint="Username"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="14sp"
            android:textColor="#8B4513"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laki-laki"
                android:textColor="#8B4513"
                android:buttonTint="#8B4513"
                android:paddingEnd="20dp" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perempuan"
                android:textColor="#8B4513"
                android:buttonTint="#8B4513" />
        </RadioGroup>

        <EditText
            android:id="@+id/tanggalLahirInput"
            style="@style/CuanInputStyle"
            android:hint="Tanggal Lahir"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/asalKampusInput"
            style="@style/CuanInputStyle"
            android:hint="Asal Universitas"
            android:inputType="text" />

        <EditText
            android:id="@+id/jurusanInput"
            style="@style/CuanInputStyle"
            android:hint="Jurusan"
            android:inputType="text" />

        <EditText
            android:id="@+id/alamatInput"
            style="@style/CuanInputStyle"
            android:hint="Alamat"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/noHPInput"
            style="@style/CuanInputStyle"
            android:hint="No. Handphone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/passwordRegisterInput"
            style="@style/CuanInputStyle"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/confirmpasswordRegisterInput"
            style="@style/CuanInputStyle"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Sekarang"
            android:backgroundTint="#940505"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvLoginLink"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:minHeight="48dp"
            android:text="Sudah punya akun? Masuk di sini"
            android:textColor="#FF7B00"
            android:textSize="14sp" />

        <!-- ILUSTRASI -->
        <ImageView
            android:id="@+id/ilustrasiImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:contentDescription="@drawable/login_illustration"
            android:src="@drawable/login_illustration"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </LinearLayout>
</ScrollView>