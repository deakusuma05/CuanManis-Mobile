<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CuanInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_input_orange_outline</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@color/text_input_color</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>

    <style name="ToolbarTitleBold" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#D65A00</item>
        <item name="android:backgroundTint">#FFCD85</item>
    </style>

</resources>